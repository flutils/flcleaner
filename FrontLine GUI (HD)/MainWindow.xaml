<Window x:Class="FrontLineGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:properties="clr-namespace:FrontLineGUI.Properties"
        xmlns:local="clr-namespace:FrontLineGUI"
        mc:Ignorable="d"
        Title="Frontline Registry Cleaner 2.0"
        Height="934"
        Width="1200"
        ResizeMode="CanResizeWithGrip"
        Topmost="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        MouseDown="Window_MouseDown" Foreground="{x:Null}"
        Loaded="Window_Loaded"
    >

    <!-- Resources for this window only -->
    <Window.Resources>

        <!-- Converters -->
        <local:SystemColorToSolidBrushConverter x:Key="BrushConverter" />
        
        <!-- FL Button (SVG Path) -->
        <!-- https://stackoverflow.com/a/4078275/1143732 -->
        <Style TargetType="{x:Type Button}" x:Key="CompanyButton" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Viewbox>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Viewbox>
                        </Grid>

                        <!-- https://stackoverflow.com/a/42448084/1143732 -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{x:Null}"/>

                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
    </Window.Resources>

    <!-- Window -->
    <Border x:Name="MainBorder" BorderThickness="5" Grid.Row="0" Grid.ColumnSpan="2" CornerRadius="20,20,0,0" BorderBrush="{Binding Source={x:Static properties:Settings.Default}, Path=MainBackground, Mode=Default, Converter={StaticResource BrushConverter}}">

        <!-- Content -->
        <Grid x:Name="MainGrid" Background="{Binding Source={x:Static properties:Settings.Default}, Path=MainBackground, Mode=Default, Converter={StaticResource BrushConverter}}" SnapsToDevicePixels="True" MinWidth="50" MinHeight="50" ScrollViewer.VerticalScrollBarVisibility="Disabled">

            <!-- Grid Definition -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"  />
                <RowDefinition Height="10*" />
            </Grid.RowDefinitions>

            <!-- Rounded Corners -->
            <Grid.OpacityMask>
                <VisualBrush Visual="{Binding ElementName=MainClipping}" Stretch="None" AlignmentY="Top" />
            </Grid.OpacityMask>

            <!-- Rounded Corners -->
            <Border x:Name="MainClipping" Background="{Binding Source={x:Static properties:Settings.Default}, Path=MainBackground, Mode=Default, Converter={StaticResource BrushConverter}}" CornerRadius="20,20,0,0" Grid.RowSpan="2" ClipToBounds="True" BorderThickness="0,0,0,0" Margin="-1,-1,-1,-1"/>

            <!-- Header Area  -->
            <Border Grid.Row="0" >
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                        <GradientStop Color="#00000000" Offset="1"/>
                        <GradientStop Color="#72FFFFFF" Offset="0"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <!-- Action Buttons -->
            <StackPanel x:Name="Action_Buttons" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal" Margin="0,0,10,0" Grid.Column="0" Grid.Row="0">

                <!-- HD -->
                <Image Source="/Resources/hd_edition.png" Stretch="None" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <!-- Minimize -->
                <Button Name="MinimizeButton" Style="{StaticResource MainActionButton}" Click="MinimizeButton_Click" HorizontalAlignment="Right" Margin="0" VerticalAlignment="Center" Height="46" Width="46" Background="#0e76f6">
                    <Path Data="{Binding Source={x:Static properties:Resources.MinimizeButtonPathData}, Mode=OneTime}" Fill="White"/>
                </Button>

                <!-- Close -->
                <Button Name="CloseButton" Style="{StaticResource MainActionButton}" Click="CloseButton_Click" HorizontalAlignment="Right" Margin="1,0,0,0" VerticalAlignment="Center" Height="46" Width="46" Background="#e30c0c">
                    <Path Data="{Binding Source={x:Static properties:Resources.CloseButtonPathData}, Mode=OneTime}" Fill="White"/>
                </Button>

            </StackPanel>

            <!-- Logo -->
            <Image x:Name="Logo" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left" Source="/Resources/title.png" Stretch="Uniform" VerticalAlignment="Stretch"/>

            <!-- Bottom Area Grid (Under Header) -->
            <Grid Grid.Row="1">

                <!-- Grid Definitions -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="53px" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!-- Top Border -->
                <Border Grid.Row="0">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF3EB42" Offset="1"/>
                            <GradientStop Color="#FFBB8F24" Offset="0"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Inner Border Area -->
                <Border Grid.Row="0" BorderThickness="0 0 0 1" BorderBrush="#bb8f24">
                    <Grid x:Name="SubTitle" Margin="2,2,2,2">

                        <!-- Background -->
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFA87113"/>
                                <GradientStop Color="#FFF5EE41" Offset="1"/>
                            </LinearGradientBrush>
                        </Grid.Background>

                        <!-- Grid Definitions -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>

                        <!-- Subtitle -->
                        <Image x:Name="Subtitle" Source="/Resources/subtitle.png" StretchDirection="Both" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,5,0,0" Grid.Column="0"/>

                        <!-- Buttons -->
                        <StackPanel x:Name="SubActionButtons" HorizontalAlignment="Right" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,10,0" Orientation="Horizontal">

                            <!-- Settings -->
                            <Button Background="{x:Null}" BorderBrush="{x:Null}" Foreground="{x:Null}" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <Image Source="/Resources/settings.png" Stretch="None" Cursor="Hand" RenderOptions.BitmapScalingMode="NearestNeighbor" />
                            </Button>

                        </StackPanel>

                    </Grid>
                </Border>

                <!-- Main Content Border -->
                <Border Grid.Row="1">
                    <Border.Background>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFF2F2F2"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>

                <!-- Main Area -->
                <Grid Grid.Row="1">

                    <!-- Grid Definitions -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="350px" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Left Menu BG -->
                    <!-- This is required to achieve the "fade" effect on the left menu background -->
                    <!-- Source: https://stackoverflow.com/a/5505174/1143732 -->
                    <Border BorderThickness="0,0,2,0" BorderBrush="White" Grid.Column="0">
                        <Border.Background>
                            <LinearGradientBrush EndPoint="0,0" StartPoint="1,0">
                                <GradientStop Color="#FFDFDFDF"/>
                                <GradientStop Color="White" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                    </Border>

                    <!-- Left Menu Content -->
                    <Grid Grid.Row="2" Grid.Column="0" Margin="5,0">

                        <!-- Grid Definitions -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!-- Buttons -->
                        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0" Grid.Row="0">

                            <!-- Scan -->
                            <Button Name="ScanButton" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0" Click="ScanButton_Click">
                                Scan
                            </Button>

                            <!-- Extras -->
                            <Button Name="ExtrasButton" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0" Click="ExtrasButton_Click">
                                Extras
                            </Button>

                            <!-- Backup -->
                            <Button Name="BackupButton" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0" Click="BackupButton_Click">
                                Backup
                            </Button>

                            <!-- Statistics -->
                            <Button Name="StatisticsButton" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="0" Click="StatisticsButton_Click">
                                Statistics
                            </Button>

                        </StackPanel>

                        <!-- Footer -->
                        <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Row="1">

                            <!-- Anniversary -->
                            <Image Source="/Resources/anniversary.png" Stretch="UniformToFill" Margin="0,0,0,10" />

                            <!-- FL -->
                            <Button Name="FrontlineButton" Style="{StaticResource CompanyButton}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="30,0,30,0" Click="FrontlineButton_Click" BorderBrush="{x:Null}" Foreground="{x:Null}" Background="{x:Null}">
                                <Path Data="{Binding Source={x:Static properties:Resources.CompanyURLButtonPathData}, Mode=OneTime}" Fill="#4b4a4a"/>
                            </Button>

                            <!-- Version -->
                            <Button Name="VersionButton" Click="VersionButton_Click" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="30,5,30,5" BorderBrush="{x:Null}" Foreground="Black" Background="{x:Null}">
                                <TextBlock>
                                        <Run Text="{Binding Version, Mode=OneTime}" FontWeight="Bold" />
                                        <Run Text="(January 1st 2022)" />
                                </TextBlock>
                            </Button>

                            <!-- Need Help? -->
                            <Button Name="HelpButton" Click="HelpButton_Click" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="30,0,30,0" BorderBrush="{x:Null}" Foreground="Black" Background="{x:Null}" Height="65">
                                <Image Source="/Resources/need_help_normal.png" Stretch="Uniform" />
                            </Button>

                        </StackPanel>

                    </Grid>

                    <!-- Right Area BG -->
                    <Border BorderThickness="1,0,0,0" BorderBrush="#bababa" Grid.Column="1" />

                    <!-- Right Area -->
                    <!-- This houses all of the panels (grids), which means that we're able to hide them as needed -->
                    <!-- I have split the panels into separate CS files for the sake of brevity -->
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" Margin="10" Grid.Row="2" Grid.Column="1" Source="/Pages/Scan.xaml" />

                </Grid>
            </Grid>

        </Grid>
    </Border>
</Window>
