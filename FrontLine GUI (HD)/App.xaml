<Application x:Class="FrontLineGUI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:FrontLineGUI"
             Startup="Application_Startup"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <!-- RPECK 15/03/2022 -->
        <!-- https://www.c-sharpcorner.com/article/customize-wpf-application-using-template-and-styles/ -->
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Extras/Styles/GeneralStyling.xaml"/>
                <ResourceDictionary x:Name="LanguagesEN" Source="/Resources/Localization/Strings/en.xaml" />
                <ResourceDictionary x:Name="LanguagesFR" Source="/Resources/Localization/Strings/fr.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>
</Application>
