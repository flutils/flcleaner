<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontLineGUI"
      xmlns:Components="clr-namespace:FrontLineGUI.Extras.Components" x:Class="FrontLineGUI.Scan"
      mc:Ignorable="d" 
      d:DesignHeight="820" d:DesignWidth="771"
      Title="Scan">

    <Grid>

        <!-- Grid Definition -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="575px"  />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Main Scanning Grid -->
        <Border x:Name="MainBorder" BorderThickness="2" BorderBrush="#a6b0b5">
            <Grid Background="White">

                <!-- Grid Definition -->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                    <RowDefinition Height="55" />
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel HorizontalAlignment="stretch" VerticalAlignment="Top">
                    <TextBlock Text="Start Your Registry Scan Below:" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" TextDecorations="Underline" FontSize="28" Foreground="#FF323232" Margin="0,35,0,0" />

                    <!-- Items Grid -->
                    <Grid Margin="0,15,0,0">
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        
                    </Grid>
                
                </StackPanel>
                
                <!-- Bottom Row -->
                <Border Grid.Row="1" Background="#f9f9f9" BorderBrush="#c5c5c5" BorderThickness="0,1,0,0"/>
                
                <!-- Bottom Info -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <!-- OS Info -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="15,0,0,0">
                        <TextBlock Text="Your System:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,3,0"/>
                        <TextBlock Name="OSInfo" Text="{Binding OSVersion, Mode=OneTime}" Grid.Column="0" VerticalAlignment="Center" />
                    </StackPanel>
                    
                    <!-- Selected -->
                    <TextBlock Name="Selected" Grid.Column="1" Text="test" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,15,0"/>

                </Grid>

            </Grid>
        </Border>

        <!-- QuickLinks-->
        <Components:QuickLinks Grid.Row="1"/>

    </Grid>
</Page>
