<Page x:Class="FrontLineGUI.Scan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontLineGUI"
      mc:Ignorable="d" 
      d:DesignHeight="820
      " d:DesignWidth="771"
      Title="Scan">

    <!-- Border-->
    <Border x:Name="MainBorder" BorderThickness="2" BorderBrush="#a6b0b5">

        <!-- Main -->
        <Grid Background="White">

            <!-- Grid Definition -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"  />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <Image Source="/Resources/scan_title.png" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform" Width="350"/>

        </Grid>

    </Border>
</Page>
