<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FrontLineGUI"
      x:Class="FrontLineGUI.Scan"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="771"
      Title="Scan">

    <!-- Resources -->
    <Page.Resources>
        
        <!-- OS Version Block -->
        <Style TargetType="{x:Type StackPanel}" x:Key="OSBlockStyling">
            <Setter Property="Cursor" Value="Hand" />
        </Style>
        
        <!-- Scan Button -->
        <Style TargetType="{x:Type Button}" x:Key="MainScanButton">
            
            <!-- General -->
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Margin" Value="75,25" />
            <Setter Property="Height" Value="105" />
            <Setter Property="FontSize" Value="25" />

            <!-- Template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border CornerRadius="15" Background="Black">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

        <!-- Main Buttons -->
        <Style TargetType="{x:Type CheckBox}" x:Key="MainOptionButtons">

            <!-- Cursor -->
            <Setter Property="Cursor" Value="Hand" />

            <!-- Template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <StackPanel Orientation="Horizontal">
                            <Border Padding="0,0,10,0">
                                <Image x:Name="checkboxImage" Source="{Binding Path=Tag, RelativeSource={RelativeSource TemplatedParent}}" Width="40" RenderOptions.BitmapScalingMode="HighQuality"/>
                            </Border>
                            <ContentPresenter VerticalAlignment="center" TextBlock.FontFamily="Arial" TextBlock.FontSize="14px" TextBlock.Foreground="#858884"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="StackPanel.Opacity" Value="0.5" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="StackPanel.Opacity" Value="1.0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>


        <Style TargetType="{x:Type CheckBox}" x:Key="SelectAllButton">

            <!-- Cursor -->
            <Setter Property="Cursor" Value="Hand" />

            <!-- Template -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type CheckBox}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="/Resources/select_all.png" MaxHeight="20" Margin="0,0,3,0"/>
                            <ContentPresenter VerticalAlignment="center" TextBlock.FontFamily="Arial" TextBlock.FontSize="12px" TextBlock.Foreground="#858884"/>
                        </StackPanel>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="False">
                                <Setter Property="StackPanel.Opacity" Value="0.5" />
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="StackPanel.Opacity" Value="1.0" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style>

    </Page.Resources>

    <!-- Main -->
    <Grid>

        <!-- Grid Definition -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <!-- Main Scanning Grid -->
        <Grid Background="White">

            <!-- Grid Definition -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="55" />
            </Grid.RowDefinitions>

            <!-- Title -->
            <StackPanel HorizontalAlignment="stretch" VerticalAlignment="Top">
                <TextBlock FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" FontStyle="Italic" TextDecorations="Underline" FontSize="18" Foreground="#FF323232" Margin="0,25,0,0" >Start Your Registry Scan Below:</TextBlock>

                <!-- Scan Now Button -->
                <Button Style="{StaticResource MainScanButton}" Content="Scan Now" />

                <!-- Items Grid -->
                <Grid Margin="25,15,25,0" Name="Scan_Checkboxes">

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <!-- Items -->
                    <!-- These are all part of a checkbox group, allowing us to collate them as needed -->
                    <CheckBox Content="Registry Errors"     Grid.Row="0" Grid.Column="0" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/registry_errors.png"    Name="RegistryErrors"      IsChecked="true" />
                    <CheckBox Content="Invalid Files"       Grid.Row="1" Grid.Column="0" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/invalid_files.png"      Name="InvalidFiles"        IsChecked="true" />
                    <CheckBox Content="Application Errors"  Grid.Row="2" Grid.Column="0" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/application_errors.png" Name="ApplicationErrors"   IsChecked="true" />
                    <CheckBox Content="DLL Errors"          Grid.Row="0" Grid.Column="1" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/dll_errors.png"         Name="DLLErrors"           IsChecked="true" />
                    <CheckBox Content="Internet Errors"     Grid.Row="1" Grid.Column="1" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/internet_errors.png"    Name="InternetErrors"      IsChecked="true" />
                    <CheckBox Content="Windows Errors"      Grid.Row="2" Grid.Column="1" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/windows_errors.png"     Name="WindowsErrors"       IsChecked="true" />
                    <CheckBox Content="Temp Files"          Grid.Row="0" Grid.Column="2" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/temp_files.png"         Name="TempFiles"           IsChecked="true" />
                    <CheckBox Content="Recycle Bin"         Grid.Row="1" Grid.Column="2" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/recycle_bin.png"        Name="RecycleBin"          IsChecked="true" />
                    <CheckBox Content="Internet Cache"      Grid.Row="2" Grid.Column="2" Style="{StaticResource MainOptionButtons}" Tag="/Resources/Scan/internet_cache.png"     Name="InternetCache"       IsChecked="true" />

                </Grid>

                <!-- Selected -->
                <CheckBox ToolTip="Select All Scanning Options" Content="Select All" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Center" Style="{StaticResource SelectAllButton}"  Margin="0,0,15,0" IsThreeState="True" Name="AllSelected" IsChecked="true" />

            </StackPanel>

            <!-- Bottom Row -->
            <Border Grid.Row="2" Background="#f9f9f9" BorderBrush="#c5c5c5" BorderThickness="0,1,0,0"/>

            <!-- Bottom Info -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="0.35*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <!-- OS Info -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0,0,0">
                    <TextBlock Text="Your System:" FontWeight="Bold" VerticalAlignment="Center" Margin="0,0,3,0"/>
                    <StackPanel Orientation="Horizontal" Name="OSBlock" Style="{StaticResource OSBlockStyling}" ToolTip="View System Specifications">
                        <Image Source="{Binding OSIcon, Mode=OneTime}" Margin="0,0,1,0" MaxWidth="30" RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Name="OSInfo" Text="{Binding OSVersion, Mode=OneTime}" VerticalAlignment="Center" />
                    </StackPanel>
                </StackPanel>

                <!-- Performance (CPU/RAM) -->
                <StackPanel Grid.Column="1" Margin="0,0,10,0" HorizontalAlignment="Right" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="CPU" />
                    <TextBlock Text="RAM" Margin="10,0,0,0" />
                    <TextBlock Text="HDD" Margin="10,0,0,0" />
                    <TextBlock Text="GPU" Margin="10,0,0,0" />
                </StackPanel>

            </Grid>

        </Grid>

    </Grid>
</Page>
